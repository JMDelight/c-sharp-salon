<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Add a new Client</title>
  </head>
  <body>
    <form class="form-group" action="/Client/success" method="post">
      <label for="client-name">Enter Client's Name:</label>
      <input type="text" name="client-name" required>
      <select name="stylist-id">
        @foreach (var stylist in Model)
        {
          <option value="@stylist.GetId()">@stylist.GetName()</option>
        }
      </select>
      <button class="btn" type="submit" name="button">Submit</button>
    </form>
  </body>
</html>
