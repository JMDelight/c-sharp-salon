<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>@Model["client"].GetName()</title>
  </head>
  <body>
    <h3>Client: @Model["client"].GetName()</h3>
    <h4>Stylist: @Model["stylist"].GetName()</h4>
    <a href='/client/edit/@Model["client"].GetId()'>Edit @Model["client"].GetName()</a>

    <br>
    <br>
    <form action='/client/@Model["client"].GetId()' method="post">
      <input type="hidden" name="_method" value="DELETE">
      <button class="btn btn-warning" type="submit">Delete this client.</button>
    </form>
    <a href="/">Return Home</a>
    <a href="/clients">View all Clients</a>
    <a href="/stylists">View all Stylists</a>
  </body>
</html>
