<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    <title>All Stylists</title>
  </head>
  <body>
    <div class="container">
      @if(@Model.Count == 0)
      {
        <p>No Stylists have been registered yet.</p>
      }
      else
      {
        <h4>Here is the list of current stylists</h4>
        <ul>
        @foreach(var stylist in Model)
        {
          <li><a href="/stylist/@stylist.GetId()">@stylist.GetName()</a></li>
        }
      </ul>
      }
      <h4>Add a new stylist.</h4>
      <form class="form-group" action="/stylists" method="post">
        <label for="stylist-name">Enter Stylist Name:</label>
        <input type="text" name="stylist-name" required>
        <button class="btn" type="submit" name="button">Submit</button>
      </form>
      <br>
      <a href="/">Return Home</a> |
      <a href="/clients">View all Clients</a>
    </div>

  </body>
</html>
