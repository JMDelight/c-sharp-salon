<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>All Stylists</title>
  </head>
  <body>
    @if(@Model.Count == 0)
    {
      <p>No Stylists have been registered yet.</p>
    }
    else
    {
      <ul>
      @foreach(var stylist in Model)
      {
        <li><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></li>
      }
    </ul>
    }
    <a href="/stylists/new">Add a new stylist.</a>
  </body>
</html>
