<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Edit @Model["client"].GetName()</title>
  </head>
  <body>
    <h2>Edit @Model["client"].GetName()</h2>
    <div class="container">
      <form class="form-group" action="/clients" method="post">
        <input type="hidden" name="_method" value="PATCH">
        <input type="hidden" name="client-id" value='@Model["client"].GetId()'>
        <label for="client-name">Enter Client's Name:</label>
        <input type="text" name="client-name" value='@Model["client"].GetName()' required>
        <select name="stylist-id">
          @foreach (var stylist in Model["stylists"])
          {
            @if (@Model["client"].GetStylistId() == stylist.GetId())
            {
              <option value="@stylist.GetId()" selected>@stylist.GetName()</option>
            }
            else
            {
              <option value="@stylist.GetId()">@stylist.GetName()</option>
            }
          }
        </select>
        <button class="btn" type="submit" name="button">Submit</button>
      </form>
    </div>
    <a href="/">Return Home</a> |
    <a href="/clients">View all Clients</a> |
    <a href="/stylists">View all Stylists</a>
  </body>
</html>
